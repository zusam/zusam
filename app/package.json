    "image-blob-reduce": "^4.1.0",
    "js-cookie": "^3.0.1",
    "mobile-drag-drop": "^3.0.0-beta.0",
    "node-sass": "^9.0.0",
    "preact": "^10.7.1",
    "react-i18next": "^13.0.2",
    "react-router": "^6.3.0",
    "react-router-dom": "^6.3.0",
    "storeon": "^3.1.5"
