    "@size-limit/preset-app": "^8.0.1",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^8.13.0",
    "eslint-config-preact": "^1.3.0",
    "eslint-plugin-compat": "^4.0.2",
    "eslint-plugin-jest": "^27.0.3",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "parcel": "^2.5.0",
    "prettier": "^3.0.0",
    "sass": "^1.50.1",
    "size-limit": "^8.0.1"
