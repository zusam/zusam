  "alias": {
    "react": "preact/compat",
    "react-dom/test-utils": "preact/test-utils",
    "react-dom": "preact/compat",
    "react/jsx-runtime": "preact/jsx-runtime"
  },
  "browserslist": "Firefox ESR, last 2 versions and > 1%, not dead, not ie <= 11",
  "size-limit": [
    {
      "path": "dist/*.js"
    }
  ]
