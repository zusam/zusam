{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "preact"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "react-hooks/exhaustive-deps": ["off"],
    "indent": ["error", 2 ],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double" ],
    "semi": ["error", "always" ],
    "react/no-danger": ["off"]
  },
  "settings": {
      "jest": {
          "version": "latest"
      }
  }
}

