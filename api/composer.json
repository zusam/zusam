{
    "name": "zusam/api",
    "description": "A truly private space for you and your friends",
    "type": "project",
    "license": "AGPL-3.0-or-later",
    "require": {
        "php": ">=8.3",
        "ext-curl": "*",
        "ext-iconv": "*",
        "ext-imagick": "*",
        "ext-mbstring": "*",
        "ext-simplexml": "*",
        "ext-xml": "*",
        "doctrine/doctrine-bundle": "^2.0",
        "doctrine/doctrine-migrations-bundle": "^3.2",
        "doctrine/orm": "^3.5",
        "embed/embed": "^4.4",
        "firebase/php-jwt": "^6.3",
        "guzzlehttp/guzzle": "^7.0",
        "nelmio/api-doc-bundle": "^5.4",
        "nelmio/cors-bundle": "^2.0",
        "symfony/asset": "^7.4",
        "symfony/console": "^7.4",
        "symfony/dotenv": "^7.4",
        "symfony/event-dispatcher": "^7.4",
        "symfony/expression-language": "^7.4",
        "symfony/flex": "^2.7",
        "symfony/framework-bundle": "^7.4",
        "symfony/intl": "^7.4",
        "symfony/lock": "^7.4",
        "symfony/mailer": "^7.4",
        "symfony/mime": "^7.4",
        "symfony/monolog-bundle": "^3.10",
        "symfony/password-hasher": "^7.4",
        "symfony/polyfill-ctype": "^1.32",
        "symfony/polyfill-uuid": "^1.32",
        "symfony/property-info": "^7.4",
        "symfony/rate-limiter": "^7.4",
        "symfony/runtime": "^7.4",
        "symfony/security-bundle": "^7.4",
        "symfony/serializer": "^7.4",
        "symfony/translation": "^7.4",
        "symfony/twig-bundle": "^7.4",
        "symfony/validator": "^7.4",
        "symfony/yaml": "^7.4",
        "twig/extra-bundle": "^3.21",
        "twig/twig": "^3.21"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.77",
        "phpstan/phpstan": "^2.1.17",
        "phpunit/phpunit": "^12.2",
        "symfony/browser-kit": "^7.4",
        "symfony/css-selector": "^7.4",
        "symfony/stopwatch": "^7.4",
        "symfony/web-profiler-bundle": "^7.4"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "carthage-software/mago": true,
            "composer/package-versions-deprecated": true,
            "symfony/flex": true,
            "symfony/runtime": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "lint": [
          "php -d memory_limit=-1 ./vendor/bin/php-cs-fixer check src/ --verbose"
        ],
        "fix": [
          "php -d memory_limit=-1 ./vendor/bin/php-cs-fixer fix src/ --verbose"
        ],
        "analyze": [
          "php -d memory_limit=-1 ./vendor/bin/phpstan analyse src/ -l 3"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install --symlink --relative %BUNDLES_DIR%": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.*",
            "docker": false
        },
        "public-dir": "../public/api/",
        "bundles-dir": "../public/api/"
    }
}
